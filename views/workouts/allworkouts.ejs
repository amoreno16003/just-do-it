  <body>

<header>
  <div class="collapse bg-dark" id="navbarHeader">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-md-7 py-4">
          
        </div>
        <div class="col-sm-4 offset-md-1 py-4">
          <h4 class="text-white">Contact</h4>
          <ul class="list-unstyled">
            <li><a href="#" class="text-white">Follow on Twitter</a></li>
            <li><a href="#" class="text-white">Like on Facebook</a></li>
            <li><a href="#" class="text-white">Email me</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  
</header>

<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">My Exercises</h1>
        <p class="lead text-muted">Use this space to keep track of exercises and be able to view more details about each one. You can always choose to remove exercises below.</p>
        <p>
          <a href="/" class="btn btn-primary my-2">Home</a>
          <a href="/workouts/search" class="btn btn-secondary my-2">Find More Exercises</a>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% workouts.forEach(s => {  %> 
            <div class="col">
                <div class="card shadow-sm">
                <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="<%= s.img %> ">
                  <div class="card-body">
                    <p class="card-text"><%= s.exerciseName %> - <%= s.target %></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                       
                        
                        
                        <form method="POST" action="/workouts/<%= s.id %>/?_method=DELETE">
                            <a type="button" class="btn btn-sm btn-outline-secondary" href="/workouts/<%= s.id %>">Views</a>
                            <button type="submit" type="button" class="btn btn-sm btn-outline-secondary">Remove</button>
                        </form>
                    
                      </div>
                      <small class="text-muted"><%= s.createdAt %> </small>
                    </div>
                  </div>
                </div>
              </div>
            <br>
        <% }) %> 

      </div>
    </div>
  </div>

</main>

<footer class="text-muted py-5">
  <div class="container">
    <p class="float-end mb-1">
      <a href="#">Back to top</a>
    </p>
  </div>
</footer>


    
    <script src="../../public/assets/bootstrap.js"></script>


